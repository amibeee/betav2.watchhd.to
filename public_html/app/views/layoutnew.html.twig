		name="theme-color" content="#ffffff">


		<!-- Ein Service vom Meta-Tag-Generator auf http://www.metaner.de/ -->
		<meta name="author" content="Hans">
		<meta name="publisher" content="Hans">
		<meta name="copyright" content="Hans">
		<meta name="description" content="Wir bieten euch Fussball Streams in HD
			Bundesliga DFB CL EL F1 Streams alles bei einem Anbieter
			Watchhd.to
			">
		<meta name="keywords" content="Bundesliga, Streams, IPTV, Championsleague, Streams, DFB, Pokal, Fussball, Streams, Sky, Streams">
		<meta name="page-topic" content="Medien">
		<meta name="page-type" content="Video">
		<meta name="audience" content="Alle"><meta http-equiv="content-language" content="de">
		<meta name="robots" content="index, follow">
		<meta name="DC.Creator" content="Hans">
		<meta name="DC.Publisher" content="Hans">
		<meta name="DC.Rights" content="Hans">
		<meta name="DC.Description" content="Wir bieten euch Fussball Streams in HD
			Bundesliga DFB CL EL F1 Streams alles bei einem Anbieter
			Watchhd.to
			">
		<meta name="DC.Language" content="de">
		<title>
			{% block title %}{% endblock %}
			- watchhd.to</title>

		<!-- Material Design fonts -->
		<link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
		<link
		href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

		<!-- Bootstrap -->
		<link
		href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">

		<!-- Bootstrap Material Design -->
		<link href="{{ base_url() }}assets/css/bootstrap-material-design.css" rel="stylesheet">
		<link href="{{ base_url() }}assets/css/ripples.min.css" rel="stylesheet">


		<link href="//fezvrasta.github.io/snackbarjs/dist/snackbar.min.css" rel="stylesheet">
		<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet"/>


		<link href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.1/css/bootstrap-select.min.css" rel="stylesheet">
		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		    <![endif]-->

			<script type="text/javascript"> var base_url = '{{ base_url() }}';
		</script>

		<script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
		<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.1/js/bootstrap-select.min.js"></script>
	</head>

	<body>
		<div class="modal fade" tabindex="-1" role="dialog">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
						<h4 class="modal-title">Modal title</h4>
					</div>
					<div class="modal-body">
						<p>One fine body&hellip;</p>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
						<button type="button" class="btn btn-primary">Save changes</button>
					</div>
				</div>
				<!-- /.modal-content -->
			</div>
			<!-- /.modal-dialog -->
		</div>
		<!-- /.modal -->
		<nav class="navbar navbar-inverse">
			<div
				class="container-fluid">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="{{ base_url() }}?ref=logo"><img src="{{ base_url() }}assets/img/logo3.png" style="margin-top:-15px"/></a>
				</div>

				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav">
						<li {% if uri_segment(1) == '' %} class="active" {% endif %}>
							<a href="{{ base_url() }}">{{ t('Startseite') }}
								<span class="sr-only">(current)</span>
							</a>
						</li>
						<li {% if uri_segment(1) == 'blog' %} class="active" {% endif %}>
							<a href="{{ base_url() }}blog">News</a>
						</li>
						<li {% if uri_segment(1) == 'help' %} class="active" {% endif %}>
							<a href="{{ base_url() }}help">{{ t('Hilfe') }}</a>
						</li>
						<li>
							<a href="https://forum.watchhd.to" target="_blank">{{ t('Forum') }}</a>
						</li>
						<li>
							<a href="http://xup.in/dl,19741857" target="_blank">{{ t('Bitcoins kaufen (Tutorial)') }}</a>
						</li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						{% if current_user.is_user %}

							<!--
								<li{% if uri_segment(1) == 'kodiplugin' %} class="active"{% endif %}><a href="{{ base_url() }}kodiplugin">Kodi Addon</a></li>
							-->
							{% if current_user.is_premium == false %}
								<li>
									<a href="{{ base_url() }}buy/premium">{{ t('Premium holen') }}</a>
								</li>
							{% endif %}
							<!--<li><a href="{{ base_url() }}recorder">Videorecorder</a></li>-->
							<li {% if uri_segment(1) == 'tickets' %} class="active" {% endif %}>
								<a href="{{ base_url() }}tickets">Support Tickets</a>
							</li>
							<li {% if uri_segment(1) == 'tvguide' %} class="active" {% endif %}>
								<a href="{{ base_url() }}tvguide">TV Guide</a>
							</li>

							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ t('Hallo') }},
									{{ current_user.username }}
									{% if current_user.is_premium %}
										<span class="label label-success">P</span>
									{% endif %}
									<span class="caret"></span>
								</a>
								<ul class="dropdown-menu">
									<li>
										<a href="{{ base_url() }}friends">{{ t('Freunde werben') }}</a>
									</li>
									<li>
										<a href="{{ base_url() }}account">{{ t('Mein Benutzerkonto') }}</a>
									</li>
									<li>
										<a href="{{ base_url() }}settings">{{ t('Einstellungen') }}</a>
									</li>
									<li role="separator" class="divider"></li>
									<li>
										<a href="{{ base_url() }}logout">{{ t('Abmelden') }}</a>
									</li>
								</ul>
							</li>
						{% else %}
							<li {% if uri_segment(1) == 'signup' %} class="active" {% endif %}>
								<a href="{{ base_url() }}signup">{{ t('Benutzerkonto erstellen') }}</a>
							</li>
							<li {% if uri_segment(1) == 'login' %} class="active" {% endif %}>
								<a href="{{ base_url() }}login">Login</a>
							</li>
						{% endif %}
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ t('Sprache ändern') }}<span class="caret"></span>
							</a>
							<ul class="dropdown-menu">
								<li>
									<a href="{{ base_url() }}language/de">deutsch</a>
								</li>
								<li>
									<a href="{{ base_url() }}language/en">english</a>
								</li>

							</ul>
						</li>
					</ul>
				</div>
				<!-- /.navbar-collapse -->
			</div>
			<!-- /.container-fluid -->
		</nav>

		<div class="container-fluid">

			{% if messages|length %}
				{% for message in messages %}
					{{ message|raw }}
				{% endfor %}
			{% endif %}

			{% if buli_alert|length %}
				<div class="alert alert-info">
					<center>{{ buli_alert|raw }}</center>
				</div>
			{% endif %}
			{% if current_user.is_premium == false %}
				<div class="alert alert-warning">
					<center>
						<strong>Achtung:</strong>Paysafecard & Amazon Zahlungen werden innerhalb von ca. 48 Stunden bearbeitet.</center>
				</div>
			{% endif %}

			{% if (current_user.premium_until-timestamp) < 172800 %}
				<div class="alert alert-warning">
					<center>
						<strong>Hinweis:</strong>
						{% if current_user.premium_until > timestamp  %}Dein Abo läuft in
							{% if (current_user.premium_until-timestamp) < 86400 %}
								{{ sum_format(((current_user.premium_until-timestamp)/3600), 0) }}
								Stunden
							{% else %}
								{{ sum_format(((current_user.premium_until-timestamp)/86400), 0) }}
								Tage(n)
							{% endif %}
							ab. Möchtest du es verlängern?{% else %}Dein Abo ist abgelaufen. Jetzt reaktivieren?
						{% endif %}
					</center>
				</div>
			{% endif %}
			<!--
			    {% if feedbacks|length %}
			        {% for feedback in feedbacks %}
			            <div class="alert alert-warning"><i class="fa fa-question" aria-hidden="true"></i> <a href="{{ base_url() }}feedback/{{ feedback.id }}">{{ t('Bitte hinterlasse uns kurz eine Rückmeldung zu einem Zahlungsvorgang.') }}</a></div>
			        {% endfor %}
			    {% endif %}
			    -->
			{% block content %}{% endblock %}
		</div>

		<script src="{{ base_url() }}assets/js/jquery.matchHeight.js"></script>
		<script src="{{ base_url() }}assets/js/ripples.min.js"></script>
		<script src="{{ base_url() }}assets/js/material.min.js"></script>
		<script src="{{ base_url() }}assets/js/snackbar.min.js"></script>
		<script src="{{ base_url() }}assets/js/jquery.timeago.js"></script>
		<script src="{{ base_url() }}assets/js/jquery.timeago.de.js"></script>
		<script src="{{ base_url() }}assets/js/app.js"></script>
	</body>

</html>
