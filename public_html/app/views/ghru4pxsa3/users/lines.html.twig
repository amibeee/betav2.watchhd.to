{% extends "ghru4pxsa3/layout.html.twig" %}

{% block title %}IPTV Lines von {{ user.username }}{% endblock %}

{% block content %}
<div class="container-fluid">
<h1>IPTV Lines von {{ user.username }}</h1>
<table class="table">
    <thead>
        <tr>
            <th>Benutzername</th>
            <th>Passwort</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ user.username }}</td>
            <td>{{ user.line_password }}</td>
            <td>
                <form method="post" action="{{ base_url() ~ 'ghru4pxsa3/line/' ~ user.id ~ '/edit' }}" class="d-inline">
                    <input type="hidden" name="type" value="mainline">
                    <button type="submit" class="btn btn-sm btn-raised btn-primary"><i class="fa fa-pencil"></i></button>
                </form>
                
                <form method="post" action="{{ base_url() ~ 'ghru4pxsa3/line/' ~ user.id ~ '/packages' }}" class="d-inline">
                    <input type="hidden" name="type" value="mainline">
                    <button type="submit" class="btn btn-sm btn-raised btn-default"><i class="fa fa-list"></i></button>
                </form>
            </td>
        </tr>
        {% for line in user.lines %}
        <tr>
            <td>{{ line.username }}</td>
            <td>{{ line.password }}</td>
            <td>

                <form method="post" action="{{ base_url() ~ 'ghru4pxsa3/line/' ~ line.id ~ '/edit' }}" class="d-inline">
                    <input type="hidden" name="type" value="subline">
                    <button type="submit" class="btn btn-sm btn-raised btn-primary"><i class="fa fa-pencil"></i></button>
                </form>
                
                <form method="post" action="{{ base_url() ~ 'ghru4pxsa3/line/' ~ line.id ~ '/packages' }}" class="d-inline">
                    <input type="hidden" name="type" value="subline">
                    <button type="submit" class="btn btn-sm btn-raised btn-default"><i class="fa fa-list"></i></button>
                </form>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
