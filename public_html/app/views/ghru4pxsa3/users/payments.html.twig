{% extends "ghru4pxsa3/layout.html.twig" %}

{% block title %}
Zahlungen
{% endblock %}

{% block content %}
		<div class="f-settings-container-fluid">
<div class="row">
    <div class="col-md-9 pull-left">
        <h1>Zahlungen</h1>
    </div>
</div>
        		<div class="friend-settings-container-fluid">


<table class="table table-striped table-bordered table-hover">
    <thead
        <tr>
            <th>ID</th>
            <th>Datum</th>
            <th width="30%">Produkt</th>
            <th>Betrag</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
    {% if payments|length %}
    
        {% for payment in payments %}
        <tr>
            <td>{{ payment.id }}</td>
            <td><abbr title="{{ payment.created_at|date('Y/m/d H:i') }}">{{ payment.created_at|date('Y/m/d') }}</abbr></td>
            <td>{{ payment.product }}</td>
            <td>{{ sum_format(payment.amount, 2) }}</td>
            <td>{{ payment.status }}</td>
        </tr>
        {% endfor %}
    
    {% else %}
    <tr>
        <td colspan="8">We doesnt have any payments from this user until now.</td>
    </tr>
    {% endif %}
    </tbody>
</table>

{{ pagination|raw }}
</div>
{% endblock %}