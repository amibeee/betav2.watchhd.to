							</svg>
						{% else %}
							<button class="btn log" onclick="window.location.href='{{ base_url() }}ghru4pxsa3/login'">{{ t('Login') }}</button>
						{% endif %}
					</div>

					<img class="hamburger-button" id="hamburger-button" src="{{ base_url() }}assets/assets/icons/hamburger.svg" alt="Menu"/>
					<div class="drawer" id="drawer">
						<div class="drawer-item">
							<a href="{{ base_url() }}ghru4pxsa3/dashboard">Dashboard</a>
						</div>
						<div class="drawer-item">
							<a href="{{ base_url() }}ghru4pxsa3/tickets">Tickets</a>
						</div>
						<div class="drawer-item">
							<a href="{{ base_url() }}ghru4pxsa3/coupons">Gutscheine</a>
						</div>
						<div class="drawer-item">
							<a href="{{ base_url() }}ghru4pxsa3/blog">Blog</a>
						</div>
						<div class="drawer-item">
							<a href="{{ base_url() }}ghru4pxsa3/helpers">Hilfe</a>
						</div>
						<div class="drawer-item">
							<a href="{{ base_url() }}ghru4pxsa3/users">Users</a>
						</div>
						<div class="drawer-item">
							<a href="{{ base_url() }}ghru4pxsa3/payments">Zahlungen</a>
						</div>
						{% if current_user.is_admin %}
							<div class="drawer-item">
								<a href="{{ base_url() }}ghru4pxsa3/settings">{{ t('Settings') }}</a>
							</div>
							<div class="drawer-item">
								<a href="{{ base_url() }}ghru4pxsa3/logout">{{ t('Logout') }}</a>
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		{% endif %}
		<div class="bgggg2"></div>

		<div class="container">
					<div class="alert-container">

			{% if messages|length %}
				{% for message in messages %}
					{{ message|raw }}
				{% endfor %}
			{% endif %}
		</div>
			{% block content %}{% endblock %}
		</div>


		<script src="{{ base_url() }}assets/js/jquery.matchHeight.js"></script>
		<script src="{{ base_url() }}assets/js/ripples.min.js"></script>
		<script src="{{ base_url() }}assets/js/material.min.js"></script>
		<script src="{{ base_url() }}assets/js/snackbar.min.js"></script>
		<script src="{{ base_url() }}assets/js/jquery.timeago.js"></script>
		<script src="{{ base_url() }}assets/js/jquery.timeago.de.js"></script>
		<script src="{{ base_url() }}assets/js/apps.js"></script>
		<script src="{{ base_url() }}assets/js/script.js"></script>
		<script src="{{ base_url() }}assets/js/navbarscript.js"></script>

		<script>
			$(function () {
$('.restart').on('click', function (e) {
e.preventDefault();
$.post('{{ base_url }}admin/ajax/cmd', {
command: 'restart',
channel_id: $(this).attr('data-channel-id')
}, function (response) {
alert(response.message);
});
});
});
		</script>
	</body>
</html>
