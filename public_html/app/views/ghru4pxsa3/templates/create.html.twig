{% extends "ghru4pxsa3/layout.html.twig" %}

{% block title %}Template erstellen{% endblock %}

{% block content %}
{{ form_open()|raw }}
<div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" name="name" id="name" value="{{ form_value('name') }}" />
</div>
<div class="form-group">
    <label>Sender</label>
    <div id="channels">
     {% for channel in channels %}
    
    <input type="hidden" name="channels[]" value="{{ channel.id }}" />
    <div class="row">
    
        <div class="col-md-4">
            {{ channel.name }}
        </div>
        <div class="col-md-4">
    <label>Startzeit</label>
        <input type="time" name="start_time[{{ channel.id }}]" class="form-control" />
        </div>
        <div class="col-md-4">
        <label>Endzeit</label>
       
        <input type="time" name="end_time[{{ channel.id }}]" class="form-control" />
        </div>
       
    </div> 
    {% endfor %} 
    </div>
</div>
<div class="form-group">
    <input type="submit" class="btn btn-success btn-raised btn-block btn-lg" value="speichern" />
</div>
{{ form_close()|raw }}
{% endblock %}