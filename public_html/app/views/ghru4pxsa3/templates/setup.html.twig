{% extends "ghru4pxsa3/layout.html.twig" %}

{% block title %}Template konfigurieren{% endblock %}

{% block content %}
{{ form_open()|raw }}
<div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" disabled name="name" id="name" value="{{ form_value('name', template.name) }}" />
</div>

<div class="form-group">

    <div class="row">
        <div class="col-md-6">
            <label>Startdatum</label>
            <input type="date" name="start_date" class="form-control" />
        </div>
        <div class="col-md-6">
            <label>Enddatum</label>
            <input type="date" name="end_date" class="form-control" />
        </div>
    </div>

</div>
<div class="form-group">
    <label>Sender</label>
    <div id="channels">
    {% for channel in channels %}
    
    <input type="hidden" name="channels[]" value="{{ channel.id }}" />
    <div class="row">
    
        <div class="col-md-4">
            {{ channel.name }}
        </div>
        <div class="col-md-4">
    <label>Startzeit</label>
        <input type="time" name="start_time[{{ channel.id }}]" class="form-control" value="{{ channel.attributes.start_time }}" />
        </div>
         <div class="col-md-4">
    <label>Endzeit</label>
       
        <input type="time" name="end_time[{{ channel.id }}]" class="form-control" value="{{ channel.attributes.end_time }}" />
        </div>
    </div> 
   
    {% endfor %}
    </div>
</div>

<div class="form-group">
    <input type="submit" class="btn btn-success btn-raised btn-block btn-lg" value="speichern" />
</div>
{{ form_close()|raw }}
{% endblock %}