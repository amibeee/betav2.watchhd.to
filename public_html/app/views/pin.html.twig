{% extends "layout.html.twig" %}

{% block title %}
{{ page.title }} |  
{% endblock %}

{% block content %}
<div align="center">
    <h1>Nur für Erwachsene</h1>
    <p>Minderjährige müssen hier leider draußen bleiben.</p>
    <p>Bitte PIN eingeben</p>
    {{ form_open()|raw }}
    <div class="form-group">
        <input type="number" name="pin" id="pin" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Pin überprüfen und Sender starten" class="btn btn-lg btn-block btn-success" />
    </div>
    {{ form_close()|raw }}
</div>
{{ page.contents|raw }}

<p><small><strong>Last Update:</strong> {{ page.updated_at|date('Y/m/d H:i') }}</small></p>

{% endblock %}