{% extends "layout.html.twig" %}

{% block title %}
	Shop
{% endblock %}

{% block content %}
	<h1 >Shop</h1>

	{{ form_open()|raw }}
	{% if uri_segment(2) == 'premium' or uri_segment(2) == '' %}
		<div class="form-group">
			<label>{{ t('Laufzeit') }}</label>
			<select name="packet_id" id="packet_id" class="form-control">
				<option>{{ t('Bitte auswählen') }}</option>
				{% for packet in packets %}
					<option value="{{ packet.id }}">{{ packet.name }}
						({{ packet.price }}€)</option>
				{% endfor %}
			</select>
		</div>
		<div class="form-group">
			<label>{{ t('Gutschein (optional)') }}</label>
			<input type="text" name="voucher" id="voucher" class="form-control"/>
		</div>
	{% endif %}
	{% if uri_segment(2) == 'tokens' %}
		<div class="form-group">
			<label>Tokens</label>
			<select name="packet_id" id="packet_id" class="form-control">
				<option>{{ t('Bitte auswählen') }}</option>
				{% for packet in packets %}
					<option value="{{ packet.id }}">{{ packet.name }}
						({{ packet.price }}€)</option>
				{% endfor %}
			</select>
		</div>
	{% endif %}
	<div class="form-group">
		<input type="submit" class="btn btn-raised btn-success btn-block btn-lg" value="{{ t('jetzt kaufen!') }}"/>
	</div>
	{{ form_close()|raw }}

{% endblock %}
